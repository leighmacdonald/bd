    "i18next-browser-languagedetector": "^7.1.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "material-ui-popup-state": "^5.0.9",
    "mui-nested-menu": "^3.2.2",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.2.2",
    "react-router-dom": "^6.16.0",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "steamid": "^2.0.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
